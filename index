    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // ç›®å‰é¸æ“‡çš„æ—…éŠé¡å‹ (é è¨­ç‚ºåœ˜é«”)
        let currentType = 'åœ˜é«”';

        // 1. é ç±¤åˆ‡æ›åŠŸèƒ½
        function switchTab(element, type) {
            // æ›´æ–°è®Šæ•¸
            currentType = type;

            // ç§»é™¤æ‰€æœ‰ active æ¨£å¼
            const tabs = document.querySelectorAll('.search-tab-item');
            tabs.forEach(tab => tab.classList.remove('active'));

            // ç‚ºè¢«é»æ“Šçš„é …ç›®åŠ ä¸Š active
            element.classList.add('active');

            // [äº’å‹•ç‰¹æ•ˆ] æ ¹æ“šé¡å‹æ”¹è®Šè¼¸å…¥æ¡†æç¤ºæ–‡å­—
            const keywordInput = document.getElementById('inputKeyword');
            if (type === 'é£¯åº—') {
                keywordInput.placeholder = 'è«‹è¼¸å…¥é£¯åº—åç¨±æˆ–åŸå¸‚...';
            } else if (type === 'æ©Ÿç¥¨') {
                keywordInput.placeholder = 'è«‹è¼¸å…¥æ©Ÿå ´ä»£ç¢¼æˆ–åŸå¸‚...';
            } else {
                keywordInput.placeholder = 'è¼¸å…¥ç›®çš„åœ°æˆ–è¡Œç¨‹é—œéµå­—';
            }
        }

        // 2. é¡¯ç¤ºæœå°‹çµæœåŠŸèƒ½
        function showSearchResult() {
            // å–å¾—è¼¸å…¥å€¼
            const keyword = document.getElementById('inputKeyword').value.trim() || 'æœªå¡«å¯«';
            const depart = document.getElementById('inputDepart').value;
            const dest = document.getElementById('inputDest').value;
            const dateStart = document.getElementById('inputDateStart').value;
            const dateEnd = document.getElementById('inputDateEnd').value;

            // çµ„åˆé¡¯ç¤ºå…§å®¹
            const resultHtml = `
                        <div class="alert alert-light border">
                            <p class="mb-2"><strong>æ—…éŠé¡å‹ï¼š</strong> <span class="badge bg-danger">${currentType}</span></p>
                            <p class="mb-2"><strong>é—œéµå­—ï¼š</strong> ${keyword}</p>
                            <hr>
                            <div class="row">
                                <div class="col-6"><small class="text-muted">å‡ºç™¼åœ°</small><br><strong>${depart}</strong></div>
                                <div class="col-6"><small class="text-muted">ç›®çš„åœ°</small><br><strong>${dest}</strong></div>
                            </div>
                            <div class="mt-3">
                                <small class="text-muted">æ—¥æœŸå€é–“</small><br>
                                <strong>${dateStart}</strong> è‡³ <strong>${dateEnd}</strong>
                            </div>
                        </div>
